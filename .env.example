# Конфигурация бота для английского клуба

# Токен бота (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# Пароль для авторизации менеджеров
MANAGER_PASSWORD=your_secure_manager_password_here

# Настройки базы данных
DATABASE_PATH=english_club.db

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Настройки сессий
MANAGER_SESSION_TIMEOUT=3600

# Настройки рассылки
MAX_BROADCAST_RATE=30
BROADCAST_DELAY=1

# Дополнительные настройки
DEBUG_MODE=False
WEBHOOK_URL=
WEBHOOK_PORT=8443